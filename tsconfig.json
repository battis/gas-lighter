{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "lib": ["esnext"],
    "experimentalDecorators": true,

    "noImplicitAny": false,
    "strictNullChecks": false,

    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "out": "docs/docs"
  }
}
