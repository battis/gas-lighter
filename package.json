{
  "homepage": "https://github.com/battis/gas-lighter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/battis/gas-lighter.git"
  },
  "author": {
    "name": "Seth Battis",
    "url": "https://github.com/battis"
  },
  "workspaces": [
    "packages/gas-lighter",
    "packages/shared",
    "packages/api/*",
    "packages/apps/*",
    "packages/services/*",
    "packages/build/*",
    "packages/components/*",
    "examples/*"
  ],
  "scripts": {
    "build": "webpack",
    "deploy": "run-s deploy:*",
    "deploy:build": "npm run build",
    "deploy:push": "clasp push --force"
  },
  "prettier": "@battis/prettier-config",
  "eslintConfig": {
    "extends": "@battis/eslint-config",
    "overrides": [
      {
        "excludedFiles": [
          "**/webpack.config.ts"
        ],
        "env": {
          "browser": true,
          "node": false
        }
      }
    ]
  },
  "devDependencies": {
    "@battis/prettier-config": "^1.5.3",
    "@changesets/cli": "^2.27.8",
    "@tsconfig/recommended": "^1.0.7",
    "add-peer-dependencies": "^0.1.5",
    "lerna": "^8.1.8",
    "monorepo-package-paths": "^0.3.0",
    "syncpack": "^12.4.0",
    "typescript": "^5.6.2"
  }
}
