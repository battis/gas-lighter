{
  "name": "@battis/gas-lighter",
  "version": "0.1.0",
  "author": "Seth Battis <seth@battis.net>",
  "license": "GPL-3.0",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "homepage": "https://github.com/battis/gas-lighter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/battis/gas-lighter.git"
  },
  "bugs": {
    "url": "https://github.com/battis/gas-lighter/issues"
  },
  "scripts": {
    "dev": "run-s dev:*",
    "dev:dist-worktree": "git worktree add dist dist",
    "dev:docs-workgree": "git worktree add docs docs",
    "docs": "run-s docs:*",
    "docs:clean": "rimraf docs/*",
    "docs:build": "npx typedoc --tsconfig tsconfig.dist.json",
    "update": "run-s update:*",
    "update:pnpm": "pnpm update",
    "update:npmrc": "pnpm install --force",
    "update:npm": "npm update --package-lock-only",
    "clean": "run-s clean:*",
    "clean:visible": "rimraf dist/*",
    "clean:invisible": "rimraf dist/.npmrc",
    "build": "run-s build:*",
    "build:clean": "npm run clean",
    "build:compile": "tsc --project tsconfig.dist.json",
    "build:config": "copyfiles .npmrc package.* *-lock.* tsconfig.json webpack.config.js dist",
    "build:html": "copyfiles \"src/**/*.html\" dist",
    "build:docs": "npm run docs",
    "copy-files": "copyfiles \"src/**/*.html\" dist; copyfiles webpack.config.js dist; copyfiles tsconfig.json dist.json; copyfiles .npmrc dist"
  },
  "peerDependencies": {
    "@google/clasp": "^2.4.2",
    "@tsconfig/recommended": "^1.0.2",
    "@types/google-apps-script": "^1.0.57",
    "@types/node": "^18.11.19",
    "gas-webpack-plugin": "^2.3.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "devDependencies": {
    "@battis/eslint-config": "github:battis/eslint-config",
    "@battis/prettier-config": "github:battis/prettier-config",
    "@google/clasp": "^2.4.2",
    "@tsconfig/recommended": "^1.0.2",
    "@types/google-apps-script": "^1.0.61",
    "@types/node": "^18.15.13",
    "copyfiles": "^2.4.1",
    "gas-webpack-plugin": "^2.4.0",
    "rimraf": "^4.4.1",
    "ts-loader": "^9.4.2",
    "typedoc": "^0.23.28",
    "typescript": "^4.9.5",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.1"
  },
  "prettier": "@battis/prettier-config",
  "eslintConfig": {
    "extends": "@battis/eslint-config",
    "overrides": [
      {
        "files": "*.html",
        "env": {
          "browser": true,
          "node": false
        },
        "globals": {
          "google": "readonly",
          "replaceContent": "readonly",
          "attachEvent": "readonly",
          "thread": "readonly",
          "progressPlaceholder": "readonly",
          "updateProgress": "readonly",
          "onProgressComplete": "readonly",
          "showProgress": "readonly"
        }
      }
    ]
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
